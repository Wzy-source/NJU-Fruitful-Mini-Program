/* components/toolComponent/toolComponent.wxss */

.container{
  background-color: white;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  
  border-radius: 30rpx;
  align-items: center;
  height: 250rpx;
  display: flex;
  
  border-radius: 30rpx;
}

.container .toolImg{
  border:2rpx solid palegoldenrod;
  height: 80%;
  width: 200rpx;
  margin-left: 30rpx;
  border-radius: 15rpx;

}
.container .passageContainer{
  margin-left: 30rpx;
  
  display: grid;
  
}

.container .passageContainer .title{
  display:grid;
  align-content: center;
  font-size: 36rpx;
}

.container .passageContainer .passage{
  display:-webkit-box;
  font-size:20rpx;
  overflow:hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  width: 450rpx;
  height: 100rpx;
  font-size: 22rpx;
  color: #888;
  margin-top: 20rpx;
  
}